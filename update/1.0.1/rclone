#!/bin/bash

. /etc/survps/scripts.conf

prompt="Nhap vao lua chon cua ban: "

options=("Ket noi google drive" "Backup code toi Drive" "Backup database toi Drive")
printf "=========================================================================\n"
printf "                           Quan ly Backup\n"
printf "=========================================================================\n"
PS3="
$prompt"
select opt in "${options[@]}" "Thoat"; do 

    case "$REPLY" in
            1 ) /etc/survps/menu/ketnoi-ggdriver;;
            2 ) /etc/survps/menu/backup-source;;
	        3 ) /etc/survps/menu/backup-database;;

            $(( ${#options[@]}+1 )) ) printf "\nChao tam biet....!\n"; break;;
            *) echo "Ban nhap sai, vui long nhap theo so thu tu tren danh sach";continue;;

    esac

done


